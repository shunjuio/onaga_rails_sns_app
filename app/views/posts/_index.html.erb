<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>
<%= link_to "[New post]", new_post_path %>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "[Show this post]", post %>
    </p>
    <p>
      <%= link_to "[Create Commnet]", new_post_comment_path(post) %>
    </p>
    <p>----------------------------------------------------------------</p>
  <% end %>
</div>

<nav>
  <% if logged_in? %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "logout-link" %>
  <% else %>
    <%= link_to "Login", new_user_session_path, class: "login-link" %>
  <% end %>
</nav>

<%= link_to "[Back to top]", root_path %>
