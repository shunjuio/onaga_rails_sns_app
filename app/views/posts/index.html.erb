<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>
<%= link_to "[New post]", new_post_path %>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "[Show this post]", post %>
    </p>
    <p>
      <%= link_to "[Create Commnet]", new_post_comment_path(post) %>
    </p>
    <p>----------------------------------------------------------------</p>
  <% end %>
</div>
